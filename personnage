public class Personnage{
    private String nom; /* Ca serait plus facile de les mettre en public non? */
    private int pV;
    private Attaque attaque1;
    private Attaque attaque2;
    
    public Personnage(){ //Constructeur par défaut, on pourra le supprimer quand on aura défini les persos
        this.nom = "personne";
        this.pV = 1;
        this.attaque1 = new Attaque("rien", 1, 1);
        this.attaque2 = new Attaque("rien", 1, 1);
    }
    
    public Personnage(int i){
        if(i==1){ /* Ceci est simplement un exemple, a chaque i on associe un personnage définit*/
            this.nom = "Hector"; 
            this.pV = 10;
            this.attaque1 = new Attaque("Tir arc", 6, 20);
            this.attaque2 = new Attaque("Coup de poing", 1, 50);
        }/*else if...*/
    }
    
    public String getNom(){
        return this.nom;
    }
    
    public int getPV(){
        return this.pV;
    }
    
    public void degat(int degat){
        this.pV = this.pV - degat;
    }
    
}

