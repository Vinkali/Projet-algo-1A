import java.util.Scanner;
public class Jeu{
    
    public static void main(String [] args){
        Personnage j1=null;
        Personnage j2=null;
        
        System.out.println(regles());
        System.out.println();
        System.out.println(descriptionPersos());
        System.out.println();
        
        j1 = choixPerso(j1);
        j2 = choixPerso(j2);
        
        String [][] plateau = creationPlateau();
        placementJoueurAlea(plateau, "J1", "J2"); //Place les joueurs de maniere aléatoire sur le plateau
        
        affichePlateau(plateau);
        
        afficheVie(j1);
        afficheVie(j2);
    }
    
    public static String regles(){
        return "les règles seront détaillées ici";
    }
    
    public static String descriptionPersos(){
        return "ceci sera une description des personnages avec un numéro associé à chacun";
    }
    
    public static Personnage choixPerso(Personnage j){
        Scanner sc = new Scanner(System.in);
        
        while(sc.next()!= "oui" && j==null){
            System.out.println(j + " Entre le numéro du personnage que tu mèneras au combat");
            
            int i = sc.nextInt();
            if(i==1){
                j = new Personnage(/*insérer le constructeur approprié*/);
            }else if(i==2){
                j = new Personnage(/*insérer le constructeur approprié*/);
            }else if(i==3){
                j = new Personnage(/*insérer le constructeur approprié*/);
            }else if(i==42){
                j = new Personnage(/*insérer le constructeur approprié*/); //ceci est un easter egg
                System.out.println("bravo tu es cheaté.e");
            }else{
                System.out.println("erreur ! entre un numéro valide");
            }
            
            if(j!=null){
                System.out.println("Tu veux incarner "+j.getNom()+" ? entre oui ou non");
            }
        }
        return j;
    }
    
    public static String [][] creationPlateau(){
        String [][] p= new String[12][12];
        for(int i=0; i<p.length; i++){
            for (int j=0; j<p[0].length; j++){
                if((i==0)||(i==11)){
                    p[i][j]=" - "; //On délimite le plateau pour qu'il soit bien visible par les joueurs
                }else if((i==0)||(i==11)){
                    p[i][j]=" | ";
                }else{
                    p[i][j]="  "; //L'intérieur du plateau est vide
                }
            System.out.println();
            }
        }
    return p;
    }
    
    public static void placementJoueurAlea(String[][] plateau, String J1, String J2){
        //A remplir
    }
    
    public static void affichePlateau(String[][] p){
        for(int i=0; i<p.length; i++){
            for(int j=0; j<p[0].length; j++){
                System.out.print(p[i][j]);
            }
            System.out.println();
        }
    }
    
    public static void afficheVie(Personnage p){
        System.out.println("PV "+p+" :");
        for(int i=0; i<p.getVieRestante(); i++){ // On peut mettre directement getPV() non?
            System.out.print("*");
        }
        System.out.println();
    } 
}
