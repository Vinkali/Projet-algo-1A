public class Personnage{
    private String joueur;
    private String nom;
    private boolean joueEnPremier;
    private int pV;
    private Attaque attaque1;
    private Attaque attaque2;
    
    public Personnage(){ //Constructeur par défaut, on pourra le supprimer quand on aura défini les persos
        this.nom = "personne";
        this.pV = 1;
        this.attaque1 = new Attaque("rien", 1, 1);
        this.attaque2 = new Attaque("rien", 1, 1);
    }
    
    public Personnage(String joueur){
        this.joueur = joueur;
    }
    
    public Personnage(String joueur, int i){
        this.joueur = joueur;
        if(i==1){ /* Ceci est simplement un exemple, a chaque i on associe un personnage défini*/
            this.nom = "Hector"; 
            this.pV = 10;
            this.attaque1 = new Attaque("Tir arc", 6, 20);
            this.attaque2 = new Attaque("Coup de poing", 1, 50);
        }/*else if...
        }*/else if(i==42){
            //ceci est un easter egg
            this.nom = "L'Être Suprême";
            this.joueEnPremier = true;
            //stats à ajouter
            System.out.println("bravo tu es cheaté.e");
        }else{
            System.out.println("erreur ! entre un numéro valide");
        }
    }
    
    public String getNom(){
        return this.nom;
    }
    
    public int getPV(){
        return this.pV;
    }
    
    public String getJoueur(){
        return this.joueur;
    }
    
    public void setJoueEnPremier(boolean b){
        this.joueEnPremier=b;
    }
    
    public boolean getJoueEnPremier(){
        return this.joueEnPremier;
    }
    
    public void degat(int degat){
        this.pV = this.pV - degat;
    }
    
}

